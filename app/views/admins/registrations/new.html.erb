<h2>Sign up</h2>


<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="form-group row"></div>
    <%= f.label :email, for:"staticEmail" class:"col-sm-2 col-form-label"%><br />
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" id:"inputEmail3" placeholder:"Email" %>
      </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, for:"inputPassword" class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
