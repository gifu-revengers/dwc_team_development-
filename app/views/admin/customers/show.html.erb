<div class="container mt-5">
  <div class="row">
    <div class="mx-2 col-8">
      <h2 class="two-line-heading"><%= @customer.join_name %>さんの会員詳細</h2>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.join_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.join_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted %>
                <p class="text-secondary"><%= "退会" %></p>
              <% else %>
                <p class="text-success"><%= "有効" %></p>
            	<% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <%= link_to "編集する",edit_admin_customer_path(@customer.id),class: "btn-flat-success" %>
      <%= link_to "注文履歴一覧を見る",admin_orders_path(customer_id: @customer.id),class: "btn-flat-primary" %>

    </div>
  </div>
</div>