<div class="container">
  <div class="row">
    <div class="col mt-3">
      <h5 class="two-line-heading">会員一覧</h5>
      <table class="table table-hover w-100">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.join_name,admin_customer_path(customer.id), class:'link_animation' %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <p class="text-secondary"><%= "退会" %></p>
                <% else %>
                  <p class="text-success"><%= "有効" %></p>
              	<% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @customers %></div>
  </div>
</div>

