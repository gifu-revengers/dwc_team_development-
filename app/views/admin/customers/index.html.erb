<div class="container">
  <div class="row">
    <div class="mx-auto col-11">


      <h1>会員一覧</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer.id) do %>
                <%= customer.join_name %>
              <% end %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <p class="withdrawal"><%= "退会" %></p>
                <% else %>
                  <p class="active"><%= "有効" %></p>
              	<% end %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>


    </div>
  </div>
  <%= paginate @customers %>
</div>

