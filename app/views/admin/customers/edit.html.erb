<% if @customer.errors.any? %>
  <div class="alert">
    <div class="alert-top"><%=@customer.errors.full_messages.size%> errors prohibited this book from being saved:</div>
    <ul class="alert-body">
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto col-11">

      <h1><%= @customer.join_name %>さんの会員情報編集</h1>
        <%= form_with model:@customer,  url:admin_customer_path, local:true do |f| %>

        <div class="field">
          <%= f.label :氏名 %>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>


        <div class="field">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email %>
        </div>

        <div class="field">
          <%= f.label :会員ステータス %>
      　　<%= f.radio_button :is_deleted, "false" %>有効
      　　<%= f.radio_button :is_deleted, "true" %>退会
    　　　</div>

        <div class="actions">
          <%= f.submit "変更を保存",class: "btn btn-success btn-sm" %>
        </div>

        <% end %>

    </div>
  </div>
</div>