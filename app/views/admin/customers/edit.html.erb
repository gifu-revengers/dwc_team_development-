<% if @customer.errors.any? %>
  <div class="alert">
    <div class="alert-top"><%=@customer.errors.full_messages.size%> errors prohibited this book from being saved:</div>
    <ul class="alert-body">
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container mt-5">
  <div class="row">
    <div class="mx-2 col-8">

      <h2><span class="bg-secondary"><%= @customer.join_name %>さんの会員情報編集</span></h2>
      <%= form_with model:@customer,  url:admin_customer_path, local:true do |f| %>

        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td><%= f.label :氏名 %></td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td><%= f.label :フリガナ %></td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><%= f.label :郵便番号 %></td>
              <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
              <td><%= f.label :住所 %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :電話番号 %></td>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :会員ステータス %></td>
              <td><%= f.radio_button :is_deleted, "false" %>有効  <%= f.radio_button :is_deleted, "true" %>退会</td>
            </tr>
          </tbody>
        </table>

        <div class="actions">
          <%= f.submit "変更を保存",class: "btn btn-success btn-sm" %>
        </div>

      <% end %>

    </div>
  </div>
</div>