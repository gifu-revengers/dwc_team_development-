<div class="container mt-5">
  <div class="row mb-4">
    <h2>商品新規登録</h2>
  </div>

<%= form_with model: @item, url:admin_items_path, local: true do |f| %>
  <div class="form_group row ml-10 mb-2">
        <label class="col-sm-2 col-form-label">商品画像</label>
        <div class="col-sm-10">
    　<%= f.attachment_field :item_image %>
    </div>
　</div>

  <div class="form_group row ml-10 mb-2">
    <label class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
　</div>

  <div class="form_group row ml-10 mb-2">
    <label class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-sm-10">
      <%= f.text_area :caption %>
    </div>
　 </div>

  <div class="form_group row ml-10 mb-2">
    <label class="col-sm-2 col-form-label">ジャンル</label>
    <div class="col-sm-10">
      <%= f.select :genre_id, @genrus.map{ |genru| [genru.name, genru.id] }, :prompt => "選択してください" %>
    </div>
　</div>

  <div class="form_group row ml-10 mb-2">
    <label class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-10">
      <%= f.text_field :price %>円
    </div>
　 </div>

  <div class="form_group row ml-10 mb-2">
    <label class="col-sm-2 col-form-label">販売ステータス</label>
    <div class="col-sm-10">
      <%= f.radio_button :is_active, "true" %>販売中
      <%= f.radio_button :is_active, "false" %>販売停止中
    </div>
　</div>

  <div class="col text-center">
    <%= f.submit '新規登録' %>
  </div>
<% end %>