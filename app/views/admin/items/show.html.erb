<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品詳細</h2>
      <%= attachment_image_tag @item, :item_image %>
      <h3>商品名</h3>
        <%= @item.name %>
      <h3>商品説明</h3>
        <%= @item.caption %>
      <h3>ジャンル</h3>
        <%= @item.genre.name %>
      <h3>税込価格(税抜価格)</h3>
        <%= @item.tax_include %>(<%= @item.price %>)
      <h3>販売ステータス</h3>
        <%= @item.status %>
        <p><%= link_to "編集する", edit_admin_item_path %></p>
    </div>
  </div>
</div>