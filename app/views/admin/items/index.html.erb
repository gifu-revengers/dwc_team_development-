<div class="container">
  <div class="row">
    <div class="col mt-3">
      <h2>商品一覧</h2>
    </div>
      <div class="col text-right mb-2">
        <%= link_to new_admin_item_path do %>
          <i class="fas fa-birthday-cake fa-2x text-danger"></i>
        <% end %>
      </div>
      <table class="table text-center">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= number_to_currency(item.price, unit: "¥", strip_insignificant_zeros: true) %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
              <td><p class="text-success">販売中</p></td>
            <% else %>
              <td><p class:"text-secondary">販売停止</p></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <%= paginate @items %>
  </div>
</div>

