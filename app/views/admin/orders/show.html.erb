<div class="container">
  <div class="row">
    <h5 class="two-line-heading">注文履歴詳細</h5>
  </div>

  <div class="row mt-3">
    <table class="w-100">
      <tbody>
        <tr>
          <th class="pb-2 pt-2 col-4 col-md-3 col-lg-2 font-weight-normal">購入者</th>
          <td class="pt-2">
            <u><%= link_to @order.customer.join_name, admin_customer_path(@order), class:"link_animation" %></u>
          </td>
        </tr>
        <tr>
          <th class="pt-2 col-4 col-md-3 col-lg-2 font-weight-normal">注文日</th>
          <td class="pt-2"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th class="pt-2 col-4 col-md-3 col-lg-2 font-weight-normal">配送先</th>
          <td class="pt-2">
            <span>〒<%= @order.postcode %> <%= @order.address %></span><br>
            <span><%= @order.address_name %></span>
          </td>
        </tr>
        <tr>
          <th class="pt-2 col-4 col-md-3 col-lg-2 font-weight-normal">支払方法</th>
          <td class="pt-2"><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="pt-2 col-4 col-md-3 col-lg-2 font-weight-normal">注文ステータス</th>
          <td class="pt-2" id="admin_orders_show_order_status">
            <%= render 'order_status', order: @order %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class='row mt-3'>
    <div class='col-12 col-lg-8'>
      <div class="table-responsive">
        <table class='table'>
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody id="admin_orders_show_order_detail_status">
            <%= render 'order_detail_status', order_details: @order_details %>
          </tbody>
        </table>
      </div>
    </div>
    <div class='col-7 col-sm-6 col-md-4 col-lg-3'>
      <div class="table-responsive">
        <table class='table table-borderless'>
          <tbody>
            <tr>
              <th class="font-weight-normal">商品合計</th>
              <td class="text-right"><%= @order.total_price.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="font-weight-normal">送料</th>
              <td class="text-right"><%= @order.postage.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="font-weight-normal">請求額合計</th>
              <td class="text-right"><%=@order.amount_including_shipping.to_s(:delimited) %>円</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
