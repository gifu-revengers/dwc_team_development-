<div class="container">
  <div class="row">
    <div class="col"><h4>ログイン</h4></div>
  </div>

  <div class="row mt-3">
    <div class="col offset-1"><h5>会員の方はこちらからログイン</h5></div>
  </div>
  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="row mt-2">
      <div class="col-2  offset-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"w-100"  %></div>
    </div>

    <div class="row mt-1">
      <div class="col-2  offset-2"><%= f.label :password, "パスワード" %></div>
      <div class="col-4"><%= f.password_field :password, autocomplete: "current-password", class:"w-100" %></div>
    </div>

    <div class="row mt-3">
      <div class="col-2 offset-4"><%= f.submit "ログイン", class:"btn btn-primary w-100" %></div>
    </div>

    <div class="row mt-3">
      <div class="col offset-1"><h5>会員登録がお済みでない方</h5></div>
    </div>

    <div class="row mt-2">
      <div class="col-5 offset-3"><u><%= render "customers/shared/links" %></u> から新規登録を行ってください。</div>
    </div>

  <% end %>
</div>
