<div class="container">
  <div class="row">
    <h4 class="two-line-heading mt-5 mt-lg-0">注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-md-7">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tr>
          <th width="120">注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <div>〒<%= @order.postcode %></div>
            <div><%= @order.address %></div>
            <div><%= @order.address_name %></div>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.amount_including_shipping.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead>
          <th>商品</th>
          <th width="120">単価(税込)</th>
          <th width="100">個数</th>
          <th width="100">小計</th>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.unit_price.to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>