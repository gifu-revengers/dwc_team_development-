<%= render 'layouts/errors', obj: @order %>



<div class="container mt-5">
  <div class="row">
    <div class="mx-2 col-8">

      <h2><span class="bg-secondary">注文情報入力</span></h2>

        <div>支払方法</div>
        <div>
          <%= @order.payment_method %>
        </div>

        <div>お届け先
          <% if @shipping_sel == "0" %>
            <%= Customer.find(current_customer.id).join_address %>
            <%= Customer.find(current_customer.id).join_name %>
          <% else %>
            <%= "〒 #{@shipping_address.postcode} #{@shipping_address.address} #{@shipping_address.address_name}" %>
          <% end %>
        </div>



      <%= form_with model:@order,  url:orders_path, local:true do |f| %>

        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :shipping_sel %>
        <%= f.hidden_field :shipping_address_id %>
        <%=f.fields_for @shipping_address do |i| %>
          <%= i.hidden_field :postcode %>
          <%= i.hidden_field :address %>
          <%= i.hidden_field :address_name %>
        <% end %>
        <div class="actions">
          <%= f.submit "注文を確定する",class: "btn btn-success btn-sm" %>
        </div>

      <% end %>


    </div>
  </div>
</div>



