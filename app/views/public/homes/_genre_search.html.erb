<h2>ジャンル検索</h2>
<ul class="list-group">
<% genres.each do |genre| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to genre.name, items_path(sort: genre.id), remote: true %>
    <span class="badge badge-primary badge-pill"><%= genre.items.count %></span>
  </li>
<% end %>
</ul>