<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "public/items/genre_search", genres: @genres %>
    </div>

    <div class="col-9">
      <div class="card border-warning text-white">
        <img class="bd-placeholder-img bd-placeholder-img-lg card-img" width="100%" height="500" src="/assets/cake_strawberry.jpeg">
        <div class="card-img-overlay">
          <h1 class="card-title">ようこそ、ながのCAKEへ！</h1>
          <h5 class="card-text">
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員ではない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。
          </h5>
        </div>
      </div>

        <h2 class="mt-4 mb-4">新着商品</h2>
        <div class="d-flex bd-highlight">
          <% @items.each do |item| %>
            <div class="card ml-2" style="width: 12rem;">
              <div class="p-2 flex-fill bd-highlight">
                <%= attachment_image_tag item, :item_image, :fill, 100, 100, fallback:"cake_role.jpeg", class:"bd-placeholder-img card-img-top" %>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text"><%= number_to_currency(item.price, unit: "¥", strip_insignificant_zeros: true) %></p>
                  <%= link_to "商品詳細", item_path(item), class:"btn btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

         <div class="col text-right mb-4">
          <%= link_to "全ての商品を見る", items_path %>
        </div>
    </div>
  </div>
</div>
