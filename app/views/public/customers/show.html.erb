<div class="container">
  <div class="row">
    <div class="col-2 offset-1"><h4>マイページ</h4></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><h5>登録情報</h5></div>
    <div class="col-2"><%= link_to "編集する", edit_customers_path, class:"btn btn-success" %></div>
  </div>

  <div class="row mt-2">
    <div class="col-10">
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td class="w-75"><%= @customer.join_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td class="w-75"><%= @customer.join_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td class="w-75"><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="w-75"><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td class="w-75"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td class="w-75"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><h5>配送先</h5></div>
    <div class="col-2"><%= link_to "一覧を見る", shipping_addresses_path,  data: {"turbolinks" => false}, class:"btn btn-primary" %></div>
  </div>

  <div class="row mt-2">
    <div class="col-2"><h5>注文履歴</h5></div>
    <div class="col-2"><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></div>
  </div>

</div>