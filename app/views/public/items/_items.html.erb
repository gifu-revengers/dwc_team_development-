<div class="items_view">
  <div class="d-flex bd-highlight">
    <% @items.each do |item| %>
      <div class="card mr-2" style="width: 12rem;">
        <div class="p-2 flex-fill bd-highlight">
          <%= attachment_image_tag item, :item_image, :fill, 100, 100, fallback:"cake_role.jpeg", class:"bd-placeholder-img card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= number_to_currency(item.price, unit: "¥", strip_insignificant_zeros: true, format: "%u%n") %></p>
            <%= link_to item_path(item), class:"push_btn" do %>
              <span>商品詳細</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <%= paginate @items %>
  </div>
</div>