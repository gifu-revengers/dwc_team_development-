<% if @genre %>
  <h2>ジャンル名（全<%= @items.count %>件）</h2>
<% else %>
  <h2>商品一覧（全<%= @items.count %>件）</h2>
<% end %>


<% @items.each do |item| %>
  <%= link_to item_path(item) do %>
    <%= attachment_image_tag item, :item_image, :fill, 60, 60, fallback:"cake_role.jpeg" %>
    <%= item.name %>
    ¥<%= item.price %>
  <% end %>
<% end %>

<%= paginate @items %>