<%= render 'layouts/errors', obj: @shipping_address %>

<div class="container mb-5 mt-5">
  <h2 class=mb-5>配送先登録 / 一覧</h2>

  <%= form_with model: @shipping_address, local: true do |f| %>
    <div class="form_group row ml-10 mb-2">
      <%= f.label :郵便番号（ハイフン無し）, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :postcode, placeholder:"0000000" %>
      </div>
    </div>


    <div class="form_group row ml-10 mb-2">
      <%= f.label :住所, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :address, size:"60", placeholder:"東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div class="form_group row ml-10 mb-2">
      <%= f.label :宛名, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :address_name, placeholder:"令和道子" %>
      </div>
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  <% end %>

  <%= render "shipping_addresses", shipping_addresses: @shipping_addresses %>

</div>