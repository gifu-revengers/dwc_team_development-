<%= render 'layouts/errors', obj: @shipping_address %>

<div class="container">
  <div class="row mt-5">
    <h5 class="two-line-heading">配送先登録/一覧</h2>
  </div>

  <%= form_with model: @shipping_address, local: true do |f| %>
    <div class="form-group row mt-3">
      <%= f.label :郵便番号（ハイフン無し）, class:"col-lg-3 mb-2 col-form-label" %>
      <%= f.text_field :postcode, placeholder:"0000000", id:"zip", class:"col-3" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :住所, class:"col-lg-3 mb-2 col-form-label" %>
      <%= f.text_field :address, size:"60", placeholder:"東京都渋谷区代々木神園町0-0", id:"address", class:"col-lg-9" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :宛名, class:"col-lg-3 mb-2 col-form-label" %>
      <%= f.text_field :address_name, placeholder:"令和道子", class:"col-3" %>

      <%= f.submit "新規登録", class:"btn-flat-success offset-1" %>
    </div>

  <% end %>

  <%= render "shipping_addresses", shipping_addresses: @shipping_addresses %>

</div>